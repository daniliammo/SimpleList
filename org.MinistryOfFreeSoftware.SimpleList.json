{
  "id": "org.MinistryOfFreeSoftware.SimpleList",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.vala"],
  "build-options": {
    "append-path": "/usr/lib/sdk/vala/bin",
    "prepend-ld-library-path": "/usr/lib/sdk/vala/lib"
  },
  "cleanup": [
    "/bin",
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "SimpleList",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/daniliammo/SimpleList.git",
          "branch": "master"
        }
      ]
    },
    {
      "name": "xdg-desktop-portal",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/libexec",
        "install -D /dev/null /app/libexec/.empty"
      ]
    }
  ]
}
